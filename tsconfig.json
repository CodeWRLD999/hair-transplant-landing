{
  // References to other tsconfig files for modular configuration
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  // Include all TypeScript files in the project
  "include": ["src/**/*", "api/**/*"],
  // Exclude node_modules and other unnecessary files
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "compilerOptions": {
    // Base directory for resolving paths
    "baseUrl": ".",
    // Map @/ to src/ for imports
    "paths": {
      "@/*": ["./src/*"]
    },
    // Target ES version for compatibility with modern browsers and Node.js
    "target": "esnext",
    // Use ES modules for better tree-shaking and Vercel compatibility
    "module": "esnext",
    // Resolve modules using Node.js style
    "moduleResolution": "node",
    // Enable interoperability between CommonJS and ES modules
    "esModuleInterop": true,
    // Output directory for compiled files (handled by Vite)
    "outDir": "./dist",
    // Root directory for source files
    "rootDir": "./",
    // Allow JavaScript files to be compiled
    "allowJs": true,
    // Enable strict type checking (recommended for robustness)
    "strict": true,
    // Skip type checking of declaration files
    "skipLibCheck": true,
    // Generate source maps for debugging
    "sourceMap": true,
    // Emit decorator metadata (if using decorators)
    "emitDecoratorMetadata": false,
    // Do not emit outputs if there are type errors
    "noEmitOnError": false
  }
}